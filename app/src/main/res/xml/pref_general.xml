<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="General"
        android:key="pref_key_general_settings">

        <SwitchPreferenceCompat
            android:defaultValue="true"
            android:key="enable_vibration_feedback"
            android:summary="@string/vibration_feedback_summary"
            android:title="@string/vibration_feedback_resource" />

        <SwitchPreferenceCompat
            android:defaultValue="true"
            android:key="enable_shake_to_checkin"
            android:summary="@string/shake_to_checkin_summary"
            android:title="@string/shake_to_checkin_title" />

    </PreferenceCategory>
</PreferenceScreen>
